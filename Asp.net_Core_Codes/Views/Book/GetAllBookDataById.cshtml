@model Asp.net_Core_Codes.Models.BookModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4">Book details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        
                        <img class="d-block w-100" src="~/img/pexels-dom-j-7304-45718.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/pexels-pixabay-159866.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/pexels-shawnreza-21120.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                   
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    
                </a>
            </div>
        </div>

        <div class="col-md-6">
            
                <div class="book-details p-4">
                    <h2 class="book-title">@Model.BookTitle</h2>
                    <p class="book-description">
                       @Model.Bookdesc
                    </p>
                    <a href="/read/the-great-adventure" class="btn btn-primary">Read Now</a>
                    <br />
                <ul class="list-group" style="margin-top:20px !important;">
                    <li class="list-group-item"><span class="font-weight-bold">Category - </span>@Model.Action</li>
                    <li class="list-group-item"><span class="font-weight-bold">Total Pages - </span>@Model.NoOfPages</li>
                    <li class="list-group-item"><span class="font-weight-bold">Languages - </span>@Model.BookLanaguage</li>

                </ul>
                </div> 
        </div>
        <hr />
        





    </div>
</div>