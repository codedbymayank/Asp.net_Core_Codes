@model IEnumerable<Asp.net_Core_Codes.Models.BookModel>

@{
    Layout = "_Layout";
}

            
<div class="container">
                <h3 class="h3">All Books</h3>
                <div class="row">
                    @foreach (var book in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="card h-100">
                                <img src="https://via.placeholder.com/300x200?text=Book+Cover" class="card-img-top" alt="Book Cover">
                                <div class="card-body">
                                    <h5 class="card-title">@book.BookTitle</h5>
                                    <p class="card-text">@book.Bookdesc</p>
                                    <p class="text-muted">Author: @book.BookAuthor</p>
                                    <a href="#" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>



