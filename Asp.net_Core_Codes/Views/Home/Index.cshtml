@{
    Layout = "_Layout";
}

<section cite="jumbotron text-center">
    <div class="container" style="text-align:center">
        <h1>@ViewData["prop1"]</h1>
        <p class="lead text-muted">
            BookNest is your digital haven for discovering, collecting, and enjoying books. Whether you're into timeless classics, indie gems, or trending titles, BookNest offers a personalized, cozy experience where every reader can feel at home. Build your bookshelf, join book circles, and nest in with stories that matter.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Book By Name</a>
        </p>
    </div>
</section>


<div class="container my-5">
    @* <h3 class="h3">Top Books</h3> *@
