@{
    Layout = "_Layout";
}

<section cite="jumbotron text-center">
    <div class="container" style="text-align:center">
        <h1>@ViewData["prop1"]</h1>
        <p class="lead text-muted">
            BookNest is your digital haven for discovering, collecting, and enjoying books. Whether you're into timeless classics, indie gems, or trending titles, BookNest offers a personalized, cozy experience where every reader can feel at home. Build your bookshelf, join book circles, and nest in with stories that matter.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Book By Name</a>
        </p>
    </div>
</section>


<div class="container my-5">
    <h3 class="h3">Top Books</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
       
        <!-- Card 1 -->
        <div class="col">
            <div class="card h-100">
                <img src="https://via.placeholder.com/300x200?text=Book+1" class="card-img-top" alt="Book 1">
                <div class="card-body">
                    <h5 class="card-title">The Whispering Library</h5>
                    <p class="card-text">A mysterious tale of a hidden library where stories come to life.</p>
                    <p class="text-muted">Author: Ava Summers</p>
                    <a href="#" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col">
            <div class="card h-100">
                <img src="https://via.placeholder.com/300x200?text=Book+2" class="card-img-top" alt="Book 2">
                <div class="card-body">
                    <h5 class="card-title">Echoes of the Past</h5>
                    <p class="card-text">Unravel ancient secrets through a thrilling historical adventure.</p>
                    <p class="text-muted">Author: Liam Harper</p>
                    <a href="#" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col">
            <div class="card h-100">
                <img src="https://via.placeholder.com/300x200?text=Book+3" class="card-img-top" alt="Book 3">
                <div class="card-body">
                    <h5 class="card-title">Digital Dreams</h5>
                    <p class="card-text">A gripping sci-fi journey into virtual realities and beyond.</p>
                    <p class="text-muted">Author: Zoe Chen</p>
                    <a href="#" class="btn btn-outline-primary">View Details</a>
                </div>
            </div>
        </div>

    </div>
</div>

