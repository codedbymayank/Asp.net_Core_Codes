    <h3 big>Top Books from attribute</h3>

    <div class="row row-cols-1 row-cols-md-3 g-4">
       
        @*First way to render View Component*@
        @await Component.InvokeAsync("TopBooks")

        @*Second way to render view component*@
        <vc:TopBooks></vc:TopBooks>

        <!-- Card 1 -->
        <div class="col">
            <div class="card h-100">
                @* <partial name="_bookthumbnail"></partial> *@
                @Html.Partial("_bookthumbnail")
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col">
            <div class="card h-100">
                <partial name="_bookthumbnail"></partial>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col">
            <div class="card h-100">
